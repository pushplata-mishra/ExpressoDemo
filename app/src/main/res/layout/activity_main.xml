<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/select_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Select Preferred Coffee"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_Coffee"
        android:id="@+id/linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/espresso"
            android:text="Espresso"
            android:onClick="onClick"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/cappicino"
            android:onClick="onClick"
            android:text="Cappicino"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/americano"
            android:padding="15dp"
            android:onClick="onClick"
            android:text="Americano"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />

	  <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/irish"
            android:padding="15dp"
            android:onClick="onClick"
            android:text="Irish"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />

<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latte"
            android:padding="15dp"
            android:onClick="onClick"
            android:text="Latte"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />


<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mocha"
            android:padding="15dp"
            android:onClick="onClick"
            android:text="Mocha"
            android:textAllCaps="true"
            android:textColor="#b39b23"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selected"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Your Selected Coffee is - "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/linear_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preferred_coffee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="--------------------"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/selected"/>

</RelativeLayout>